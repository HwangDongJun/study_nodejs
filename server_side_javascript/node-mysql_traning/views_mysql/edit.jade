doctype html
html
  head
    meta(charset='utf-8')
  body
    h1
      a(href='/topic') Server Side JavaScript
    ul
      each topic in topics
        li
          a(href='/topic/' + topic.id)=topic.title

    article
      form(action='/topic/' + topicid.id + '/edit' method='post')
        p
          input(type='text' name='title' placeholder='title' value=topicid.title)
        p
          textarea(name='description' placeholder='description')= topicid.description
        p
          input(type='text' name='author_id' placeholder='author_id' value=topicid.author_id)
        p
          input(type='submit')

    ul
      li
        a(href='/topic/add') add
