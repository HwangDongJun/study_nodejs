doctype html
html
  head
    meta(charset='utf-8')
  body
    h1
      a(href='/topic') Server Side JavaScript
    ul
      each topic in topics
        li
          a(href='/topic/' + topic.id)=topic.title

    article
      if topicid
        h2= topicid.title
        = topicid.description
        d= topicid.author_id
      else
        h2 Welcome
        | This is server side javascript tutorial.
    ul
      li
        a(href='/topic/add') add
      if topicid
        li
          a(href='/topic/' + topicid.id + '/edit') edit
        li
          a(href='/topic/' + topicid.id + '/delete') delete
